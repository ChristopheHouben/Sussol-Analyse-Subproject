<Window x:Class="Sussol_Analyse_Subproject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sussol_Analyse_Subproject"
        mc:Ignorable="d"
        Title="AnalySussol" Height="356.511" Width="501">
    <Grid Margin="0,0,0,0">
        <GroupBox x:Name="GroupBoxAlgorithms" Header="Select the desired algorithm(s)" HorizontalAlignment="Left" Height="100" Margin="10,124,0,0" VerticalAlignment="Top" Width="155" FontSize="10">
            <Grid>
                <CheckBox x:Name="CheckBoxCanopy" Content="Canopy" HorizontalAlignment="Left" Margin="6,15,0,0" VerticalAlignment="Top" Click="setButtonVisibility" />
                <CheckBox x:Name="CheckBoxSom" Content="SOM" HorizontalAlignment="left" Margin="6,35,0,0" VerticalAlignment="Top" Click="setButtonVisibility" />
                <CheckBox x:Name="CheckBoxXmeans" Content="Xmeans" HorizontalAlignment="left" Margin="6,55,0,0" VerticalAlignment="Top" Click="setButtonVisibility" />

            </Grid>
        </GroupBox>
        <GroupBox x:Name="GroupBoxModelType" Header="Select the desired modelling type" HorizontalAlignment="Left" Height="100" Margin="170,124,0,0" VerticalAlignment="Top" Width="171" FontSize="10">
            <Grid>
                <CheckBox x:Name="CheckBoxVaried" Content="Varied" HorizontalAlignment="Left" Margin="6,15,0,0" VerticalAlignment="Top" Click="setButtonVisibility" />
                <CheckBox x:Name="CheckBoxNested" Content="Nested" HorizontalAlignment="left" Margin="6,35,0,0" VerticalAlignment="Top" Click="setButtonVisibility" />
            </Grid>
        </GroupBox>
        <GroupBox x:Name="GroupBoxFormat" Header="Select the desired format" HorizontalAlignment="Left" Height="100" Margin="346,124,0,0" VerticalAlignment="Top" Width="135" FontSize="10">
            <Grid>
                <CheckBox x:Name="CheckBoxRawData" Content="Raw data" HorizontalAlignment="Left" Margin="6,15,0,0" VerticalAlignment="Top" Click="setButtonVisibility" />
                <CheckBox x:Name="CheckBoxCsv" Content="Csv" HorizontalAlignment="left" Margin="6,35,0,0" VerticalAlignment="Top" Click="setButtonVisibility" />
            </Grid>
        </GroupBox>
        <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Width="300"  Height="300">
            <Label Content="Select a dataset to begin:"/>
            <Button x:Name="btnOpenFile" Click="btnOpenFile_Click" Content="Select dataset" Margin="20,2,0,0" Height="26" Width="117" />

        </WrapPanel>


        <Button x:Name="ButtonStart" Content="Start" HorizontalAlignment="Left" Margin="163,255,0,0" VerticalAlignment="Top" Width="166" Height="44" Click="ButtonStart_Click" IsEnabled="False"/>
        <Label x:Name="LabelChosenInfo" Content="You have chosen " HorizontalAlignment="Left" Margin="135,84,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelDataSetName" Content="no dataset yet." HorizontalAlignment="Left" Margin="253,84,0,0" VerticalAlignment="Top" />

    </Grid>
</Window>
